[color]
        ui = true
[alias]
        p = pull --rebase
        rb = rebase
        co = checkout
        a  = add
        l  = log
        st = status
        sh = stash
        f  = fetch
        ci = commit -v
        cm = commit -m
        di = diff
        br = branch
        fixup = commit --amend -C HEAD
        hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
[core]
        excludesfile = ~/.gitignore
        pager = less
        editor = vim
        autocrlf = input
[tig "bind"]
        generic = g move-first-line
        generic = G move-last-line
