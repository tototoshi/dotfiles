alias g='git'
alias gerp='grep'
alias ll='ls -l'
alias u='cd ..'
alias vi='vim'
alias e='emacs'
if_mac alias o='open .'

if_linux alias ls='ls --color=auto'
if_linux alias n="bash -c 'nautilus .'"
if_mac alias java='java -Dfile.encoding=UTF-8'
if_mac alias scala='scala -Dfile.encoding=UTF-8'
if_mac alias javac='LC_ALL=ja_JP.UTF-8 javac -J-Dfile.encoding=utf-8'
if_mac alias ls='ls -G'
